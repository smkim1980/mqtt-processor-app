<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bms.app.repository.LocationHistoryMapper">

    <insert id="insert" parameterType="com.bms.app.dto.LocationHistoryDto">
        INSERT INTO LOCATION_HISTORY (TRIP_ID, OCCUR_AT, LATITUDE, LONGITUDE, HEADING, SPEED)
        VALUES (#{tripId}, #{occurAt}, #{latitude}, #{longitude}, #{heading}, #{speed})
    </insert>

    <select id="findByTripId" resultType="com.bms.app.dto.LocationHistoryDto">
        SELECT * FROM LOCATION_HISTORY WHERE TRIP_ID = #{tripId}
    </select>

</mapper>